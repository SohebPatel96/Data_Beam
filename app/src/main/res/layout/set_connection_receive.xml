<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="56dp">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/Okay3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getIP3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="Connect" />

    <TextView
        android:id="@+id/textViewForIP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/getIP3"
        android:layout_alignBottom="@+id/getIP3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="62dp"
        android:paddingTop="56dp"
        android:text="IP" />

    <TextView
        android:id="@+id/textViewConnected2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Okay3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp" />


    <EditText
        android:id="@+id/getIP3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:layout_marginTop="49dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textViewForIP2"
        android:layout_marginStart="25dp" />

</RelativeLayout>
