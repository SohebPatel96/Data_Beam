<?xml version="1.0"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37474F"
    android:paddingTop="56dp">


    -

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:background="#FFFFFF"
        android:padding="30dp">

        <ImageButton
            android:id="@+id/imageFile"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#FFFFFF"
            android:scaleType="fitXY"
            android:src="@drawable/ic_action_folder_open" />

        <ImageButton
            android:id="@+id/imageAudio"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="#FFFFFF"
            android:scaleType="fitXY"
            android:src="@drawable/ic_action_headphones" />

        <ImageButton
            android:id="@+id/imagePhoto"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="#FFFFFF"
            android:scaleType="fitXY"
            android:src="@drawable/ic_action_picture" />

        <ImageButton
            android:id="@+id/imageApp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="#FFFFFF"
            android:scaleType="fitXY"
            android:src="@drawable/app" />

        <ImageButton
            android:id="@+id/imageVideo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#FFFFFF"
            android:scaleType="fitXY"
            android:src="@drawable/ic_action_movie" />

        <ImageButton
            android:id="@+id/imageDocument"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="#FFFFFF"
            android:scaleType="fitXY"
            android:src="@drawable/document" />

    </RelativeLayout>

</RelativeLayout>